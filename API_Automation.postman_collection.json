	"item": [
		{
			"name": "Search",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const searchTextList= [\"Nizza terfoil\", \"Hacked fashion\", \"Seasonal\", \"Nike\"]\r",
							"\r",
							"function getRandomInteger(min,max){\r",
							"    min = Math.ceil(min);\r",
							"    max = Math.floor(max);\r",
							"    return Math.floor(Math.random() * (max - min)) + min;\r",
							"}\r",
							"\r",
							"const searchText = searchTextList[getRandomInteger(0,3)]\r",
							"console.log(searchText)\r",
							"pm.collectionVariables.set(\"search_text\", searchText)"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"var responseBody = pm.response.json();\r",
							"console.log(responseBody)\r",
							"\r",
							"const items = responseBody.eContext.graphqlResponse.e248uix4m5ibqamf.items;\r",
							"const productName = items[0].name;\r",
							"const productSku = items[0].sku;\r",
							"\r",
							"pm.collectionVariables.set(\"product_name\", productName);\r",
							"pm.collectionVariables.set(\"product_sku\", productSku);\r",
							"\r",
							"const searchText = pm.collectionVariables.get(\"search_text\")\r",
							"\r",
							"pm.test (\"Validate status code is 200.\",()=>{\r",
							"    pm.expect(200).eql(pm.response.code)\r",
							"})\r",
							"\r",
							"pm.test(\"validate success entity value is true\",()=>{\r",
							"    pm.expect(true).eql(responseBody.success)\r",
							"})\r",
							"\r",
							"pm.test(\"validate search count ismore than 0\", ()=>{\r",
							"    pm.expect(items.length).greaterThan(0);\r",
							"})\r",
							"\r",
							"pm.test(\"validate search result included with search text\",()=>{\r",
							"    pm.expect(items[0].name).include(searchText)\r",
							"})"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
