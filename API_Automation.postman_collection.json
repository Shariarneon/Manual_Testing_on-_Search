				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"responseBody = pm.response.json();    \r",
							"const actualsku = responseBody.data.item.product_sku;\r",
							"const expectedSku = pm.collectionVariables.get(\"product_sku\");\r",
							"const actualQty = responseBody.data.item.qty;\r",
							"const expectedQty = pm.collectionVariables.get(\"pre_total_qty\") + pm.collectionVariables.get(\"product_qty\")\r",
							"\r",
							"pm.collectionVariables.set(\"total_qty\", actualQty);\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"validate product sku\",()=>{\r",
							"    pm.expect(expectedSku).eql(actualsku);\r",
							"})\r",
							"\r",
							"pm.test(\"validate product quantity\",()=>{\r",
							"    pm.expect(expectedQty).eql(actualQty)\r",
